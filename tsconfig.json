{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2022",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
  },
  "include": ["./src/", "./types/"],
  "exclude": ["./node_modules"]
}
